.questioncard {
  margin: 40rpx;
  background-color: white;
  border-radius: 5px;
  padding: 0 30rpx 30rpx 30rpx;
  box-shadow: lightgrey 0px 0px 5px 5px;
}

.cardtitle {
  text-align: center;
  font-size: 17pt;
  height: 120rpx;
  line-height: 120rpx;
}

.question {
  height: 100rpx;
  line-height: 120rpx;
}

.hover-question {
  opacity: 0.2;
} 

.buttons {
  position: fixed;
  bottom: 0;
  background: white;
  display: flex;
}
